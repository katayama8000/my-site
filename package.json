{
  "private": true,
  "scripts": {
    "dev": "concurrently npm:dev:*",
    "dev:next": "next dev",
    "dev:path": "pathpida --ignorePath .gitignore --watch",
    "build": "pathpida --ignorePath .gitignore && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write --ignore-path .gitignore \"./**/*.{js,jsx,ts,tsx,json,css}\"",
    "format:check": "prettier --check --ignore-path .gitignore \"./**/*.{js,jsx,ts,tsx,json,css}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/server": "^11.11.0",
    "@mantine/core": "6.0.15",
    "@mantine/hooks": "6.0.1",
    "@mantine/next": "6.0.9",
    "next": "13.2.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "4.0.4"
  },
  "devDependencies": {
    "@types/node": "20.2.5",
    "@types/react": "18.2.18",
    "autoprefixer": "10.4.14",
    "concurrently": "7.6.0",
    "eslint": "8.41.0",
    "eslint-config-next": "13.4.7",
    "eslint-config-prettier": "8.5.0",
    "husky": "^8.0.3",
    "pathpida": "0.20.1",
    "postcss": "8.4.21",
    "prettier": "3.0.0",
    "prettier-plugin-tailwindcss": "0.3.0",
    "tailwindcss": "3.3.2",
    "typescript": "5.1.6"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  }
}
